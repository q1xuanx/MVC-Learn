@page
@model RazerWeb.Pages.Categories.CreateModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="Categories.Name" class="p-0"></label>
            <input asp-for="Categories.Name" class="form-control" />
            <span asp-validation-for="Categories.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Categories.DisplayOrder" class="p-0"></label>
            <input asp-for="Categories.DisplayOrder" class="form-control" />
            <span asp-validation-for="Categories.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control"><strong>Back</strong></a>
            </div>

        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}