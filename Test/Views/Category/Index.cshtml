@model List<Category>

<div class="container">
    <div class="row pt-4 pb-1">
        <div class="col-6">
            <h2 class="text-dark">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create New Category <i class="bi bi-plus-square"></i>
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th>

        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.Name))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-50 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-light mx-2">
                                <i class="bi bi-pencil"></i>Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id ="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>